{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rebound",
  "version": "0.1.0",
  "identifier": "com.andre.rebound",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "rebound",
        "width": 800,
        "height": 600,
        "resizable": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; frame-src 'self' asset: http://asset.localhost; style-src 'self' 'unsafe-inline'; script-src 'self'; ",
      "assetProtocol": {
        "enable": true,
        "scope": ["resources/assets/animations/**/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["resources/assets/animations/**/*"]
  }
}
